---
import LinkLogo from "@components/LinkLogo.astro"
import GithubLogin from "@components/GithubLogin.astro";
import Title from "@components/Title.astro";
import Line from "@components/Line.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Acortador de Enlaces" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="w-full h-full bg-gray-black selection:bg-gray-400">
			<nav class="flex w-full pb-3 pt-4 lg:px-4 sticky top-0 z-50 bg-neutral-900">
				<div class="flex w-full items-center justify-between container">
					<a href="/" class="flex items-center space-x-3 transition-opacity hover:opacity-80 rtl:space-x-reverse">	
						<LinkLogo />	
						<Title />
					</a>
				</div>
				<div class="flex items-center space-x-1">
					<GithubLogin text={false} />
				</div>
			</nav>
			
			<Line />
			
			<main class="flex flex-col my-4 mx-6 items-center justify-center gap-xl self-stretch bg-black_gradient sm:p-lg py-xxxl px-sm">
				<slot />
			</main>
	</body>
</html>