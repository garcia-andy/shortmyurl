---
interface Props {
	isTitle?: boolean;
	content?: string;
}

const { isTitle, content } = Astro.props

const isTitleClass = (isTitle === true) ? 'text-4xl' : 'text-sm'
const Content = (content === undefined) ? 'Short My URL' : content

//* Separate the content into an array of words and using the array to create the title
const contentPlacements = Content.split(' ')
let normalContent = ''

for(let i=0; i < contentPlacements.length-1; i++){
	normalContent = `${normalContent} ${contentPlacements[i]}`
}

const lastContent = contentPlacements[ contentPlacements.length-1 ]
//* End of title creation

const classList = [isTitleClass, 'self-center whitespace-nowrap font-mediumtracking-tight text-white text-pretty']

---

<span class:list={classList}>
	{normalContent}
	<span class="text-transparent bg-clip-text bg-gradient-to-r from-accent to-accent-light">{lastContent}</span>
</span>